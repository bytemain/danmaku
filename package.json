{
  "name": "live-hime",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron-forge start",
    "build": "tsx build.ts && yarn renderer:build",
    "dev": "wireit",
    "watch": "tsx build.ts --watch",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "renderer:dev": "wireit",
    "renderer:build": "yarn workspace renderer-react build"
  },
  "wireit": {
    "renderer:dev": {
      "command": "yarn workspace renderer-react dev",
      "service": true
    },
    "dev": {
      "command": "electron-forge start",
      "service": true,
      "dependencies": [
        "renderer:dev"
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@electron-forge/publisher-github": "^6.1.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dotenv": "^16.1.3",
    "electron": "^24.8.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "filesize": "^10.0.7",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "mri": "^1.2.0",
    "undici": "^5.22.1",
    "update-electron-app": "^2.0.1",
    "vite": "^5.2.10",
    "wireit": "^0.9.5",
    "ws": "^8.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bytemain/danmaku.git"
  },
  "packageManager": "yarn@3.6.0",
  "workspaces": [
    "renderer"
  ]
}
